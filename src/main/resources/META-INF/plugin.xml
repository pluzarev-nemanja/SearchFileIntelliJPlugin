<idea-plugin>
    <id>com.nemanjapluzarev.SearchFileIntelliJPlugin</id>
    <name>SearchFileIntelliJPlugin</name>
    <vendor url="https://www.nemanjapluzarev.com">Nemanja Pluzarev</vendor>

    <description><![CDATA[
    Simple tool window that searches files for text occurrences.
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="File Search"
                    anchor="right"
                    factoryClass="com.nemanjapluzarev.searchfileintellijplugin.toolwindow.SearchToolWindowFactory"
                    icon="/META-INF/icons/search.svg"/>
    </extensions>
</idea-plugin>